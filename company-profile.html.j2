<!doctype html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/4.0.1/chart.umd.js" ></script>
  </head>
  <body>
    <main class="container-fluid">
        {{ table }}
        <div class="d-flex flex-wrap justify-content-between w-100">
        <div style="width: 800px;"><canvas id="margins"></canvas></div>
        <div style="width: 800px;"><canvas id="absolute"></canvas></div>
        </div>
    </main>
    <script>

        const myChart = new Chart("margins", {
            type: "line",
            options: { plugins: { title: { display: true, text: 'Company Margins (% of total revenues)' } } },
            data: {
              labels: {{ labels }},
              datasets: [{
                data: {{ gross }},
                borderColor: "gray",
                label: "Gross Margin",
                fill: true
              },{
                data: {{ operating }},
                borderColor: "blue",
                label: "Operating Margin",
                fill: true
              },{
                data: {{ net }},
                borderColor: "red",
                label: "Net Income Margin",
                fill: true
              },{
                data: {{ fcf }},
                borderColor: "green",
                label: "Levered FCF Margin",
                fill: true
              }]
            }});

        const absolute = new Chart("absolute", {
            type: "line",
            options: { plugins: { title: { display: true, text: 'Absolute Finances' } } },
            data: {
              labels: {{ labels }},
              datasets: [{
                data: {{ revenues_abs }},
                borderColor: "gray",
                label: "Total Revenues",
                fill: true
              },{
                data: {{ net_abs }},
                borderColor: "red",
                label: "Net Income",
                fill: true
              },{
                data: {{ fcf_abs }},
                borderColor: "green",
                label: "Levered FCF",
                fill: true
              },{
                data: {{ divs_abs }},
                borderColor: "yellow",
                label: "Dividends",
                fill: true
              }]
            }});
    </script>
  </body>
</html>

